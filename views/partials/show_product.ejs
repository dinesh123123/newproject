                <!-- #END# Main Graph-->
            <div class="page-heading">
                <h1>Product List</h1>
                <ol class="breadcrumb">
                    <li><a href="/public/index">Home</a></li>
                    <li class="active">Product list</li>
                </ol>
            </div>


            <div class="panel panel-default">
            
                <div class="panel-heading"> <button type="open-button" onclick="openForm()"class="btn btn-info add-new"><i class="fa fa-plus"></i><a href="/public/create_product"> Add New</a></button></div>
            
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table id="myTable" class="table js-exportable">
                            
                                <thead>
                        <tr>
                        <th>S.No</th>
                        <th>Product name</th>
                        <th>Products</th> 
                        <th>Product type</th>
                        <th>Image</th>                       
                        <th>New Product price</th>
                        <th>Refurbished Product Price</th>                       
                        <th>Security Deposit</th>
                         <th>Prime Product Price (2,3,6,9,12/months)</th> 
                         <th>Value Product Price  (2,3,6,9,12/months)</th> 
                        <th>Instock</th>             
                        <th>Action</th>
            </tr>
        </thead>
            <tbody>
                <% for(var i=0; i < data.length; i++) { %>
                                       
            <tr>
             <td><%= i+1%></td>
             <td><%=data[i].product_name%></td>
            <td><%=data[i].products%></td>
            <td><%=data[i].product_type%></td>

            <%  if(data[i].images.length>0){ %>
            <td><img src="/uploads/<%=data[i].images[0]%>"alt="cars"style="height:35px;weight:35px;">
                <% } %>
            </td>
             <td><%=data[i].selling_price%></td>
             <td><%=data[i].rent_selling_price%></td>
             <td><%=data[i].refund_pollicy%></td>
              <td><b>Rs  </b>(<%=data[i].p_price2%> , <%=data[i].p_price3%>,  <%=data[i].p_price6%>, <%=data[i].p_price9%> ,<%=data[i].p_price12%>)</td>
             <td><b>Rs  </b>(<%=data[i].v_price2%> , <%=data[i].v_price3%>,  <%=data[i].v_price6%>, <%=data[i].v_price9%> ,<%=data[i].v_price12%>)</td>
             <td><%=data[i].instock%></td>
           
     
    
    <td><a href ="/public/delete_product/<%= data[i].id%>"class="btn btn-circle  btn-sm  btn-danger"><i class="fa fa-trash"></i></a>
    
    <a href="/public/update_product/<%= data[i].id%>" class="btn btn-primary"><i class="fa fa-edit"></i></a>
    
    </td>
                                            </tr>
                                            <% } %>
                                   </tbody> 
                            
                                </table>
                        </div>
                    </div>
                </div>
                <!-- #END# Task data -->
            </div>
        </section>